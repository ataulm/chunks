<resources>

  <style name="AppTheme"
    parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@color/alabaster</item>
    <item name="android:statusBarColor">@color/lochmara</item>
    <item name="colorPrimary">@color/cerulean</item>
    <item name="colorAccent">@color/azure_two</item>
  </style>

  <style name="AppTheme.CheckBox">
    <item name="colorControlNormal">@color/black_38</item>
    <item name="colorControlActivated">@color/azure_two</item>
  </style>

  <style name="Chunks" />

  <style name="Chunks.TabsPagerNavigationWidget" />

  <style name="Chunks.TabsPagerNavigationWidget.View">
    <item name="android:background">@color/azure</item>
    <item name="android:elevation">5dp</item>
    <item name="tabLayoutId">@layout/view_chunks_tab</item>
    <item name="tabsLeftPadding">0dp</item>
    <item name="indicatorColor">@color/white</item>
    <item name="indicatorHeight">4dp</item>
  </style>

  <style name="Chunks.TabsPagerNavigationWidget.Tab">
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/day_tabs_tab_text</item>
    <item name="android:textSize">18sp</item>
    <item name="textFont">robotoRegular</item>
  </style>

  <style name="Chunks.EntryInputWidget" />

  <style name="Chunks.EntryInputWidget.View">
    <item name="android:background">@color/white</item>
    <item name="android:elevation">5dp</item>
  </style>

  <style name="Chunks.EntryInputWidget.EditText">
    <item name="android:background">@null</item>
    <item name="android:inputType">text</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:textColorHint">@color/black_54</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="Chunks.EntriesPage" />

  <style name="Chunks.EntriesPage.View">
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingBottom">4dp</item>
    <item name="android:clipToPadding">false</item>
  </style>

  <style name="Chunks.EntryWidget" />

  <style name="Chunks.EntryWidget.View">
    <item name="android:background">@drawable/chunks_entrywidget_background</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingRight">0dp</item>
    <item name="android:paddingBottom">4dp</item>
  </style>

  <style name="Chunks.EntryWidget.CheckBox"
    parent="AppTheme">
    <item name="android:theme">@style/AppTheme.CheckBox</item>
  </style>

  <style name="Chunks.EntryWidget.Text">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">16sp</item>
    <item name="android:lineSpacingExtra">6sp</item>
  </style>

  <style name="Chunks.EntryWidget.Icon">
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/chunks_entrywidget_icon_background</item>
  </style>

  <style name="Chunks.EntryWidget.Icon.MoveLeft"
    parent="Chunks.EntryWidget.Icon" />

  <style name="Chunks.EntryWidget.Icon.MoveRight"
    parent="Chunks.EntryWidget.Icon" />

  <style name="Chunks.EntryWidget.Icon.Delete"
    parent="Chunks.EntryWidget.Icon" />

</resources>
