<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
    parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@color/alabaster</item>
  </style>

  <style name="Chunks" />

  <style name="Chunks.Toolbar" />

  <style name="Chunks.Toolbar.Title">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">20sp</item>
    <item name="textFont">robotoMedium</item>
  </style>

  <style name="Chunks.TabsPagerNavigationWidget" />

  <style name="Chunks.TabsPagerNavigationWidget.View">
    <item name="tabLayoutId">@layout/view_chunks_tab</item>
    <item name="tabsLeftPadding">0dp</item>
    <item name="indicatorColor">@color/white</item>
    <item name="indicatorHeight">4dp</item>
  </style>

  <style name="Chunks.TabsPagerNavigationWidget.Tab">
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/day_tabs_tab_text</item>
    <item name="android:textSize">18sp</item>
    <item name="textFont">robotoRegular</item>
  </style>

  <style name="Chunks.EntryInputWidget" />

  <style name="Chunks.EntryWidget" />

  <style name="Chunks.EntryWidget.View">
    <item name="android:background">@color/white</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingRight">8dp</item>
  </style>

</resources>
